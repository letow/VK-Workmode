{
    "manifest_version": 3,
    "name": "VK Workmode",
    "version": "1.2",
    "description": "Скрытие отвлекающих, манящих и соблазняющих элементов VK с целью сохранения концентрации.",
    "icons": {
        "128": "logo128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://vk.com/*"],
            "js": ["work.js"]
        }
    ]
}
